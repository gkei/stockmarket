
<%= form_tag root_path, :method => 'POST' do %>
    <%= text_field_tag 'id', nil, placeholder: 'Enter stock symbol', sixe: 50 %>
    <%= submit_tag 'Find Stock details' %>
<% end %>

<br> ======= <br/>

<% if @err2 %>
    <%= @err2 %>
<% end %>

<% if @stock %>
    <%= @stock.inspect %> <br/><br/>
    <strong> Company name   : </strong><%= @stock.company_name %> <br/> 
    <strong> Close price    : </strong><%= @stock.close %> <br/> 
    <strong> Day's movement : </strong><%= @stock.low %> - <%=@stock.high %> 
<% elsif @nothing %>
    <%= @nothing %>
<% end %>
